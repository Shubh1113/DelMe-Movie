@model DelMe.ViewModels.RandomMovieViewModel
@{
    ViewBag.Title = "Randon";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{ 
    var className = Model.Customers.Count > 0 ? "popular" : null;
}
<h2 class="@className">@Model.Movies.Name</h2>
@*
    so far created movie customer used both by view model and displayed both     
*@
@if (Model.Customers.Count == 0)
{
    <text>No one has rented this movie</text>
}
else
{
    <ul>
        @foreach (var cust in Model.Customers)
        {
            <li>@cust.Name</li>
        }
    </ul>
}